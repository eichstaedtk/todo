<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <variable
      name="todo"
      type="de.eichstaedt.todos.infrastructure.view.ToDoDetailView"></variable>

    <variable
      name="presenter"
      type="de.eichstaedt.todos.infrastructure.view.DetailViewPresenter"></variable>
  </data>
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/itemName"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        layout_width="match_parent"
        layout_height="wrap_content"
        android:text="@={todo.name}" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      app:layout_constraintTop_toBottomOf="@id/itemName"
      android:id="@+id/itemBeschreibung"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_beschreibung"
        layout_width="match_parent"
        layout_height="wrap_content"
        android:text="@={todo.beschreibung}" />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
      android:id="@+id/todoErledigt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Erledigt"
      android:checked="@={todo.erledigt}"
      app:layout_constraintTop_toBottomOf="@id/itemBeschreibung"
      app:layout_constraintLeft_toLeftOf="@id/itemBeschreibung"></CheckBox>

    <CheckBox
      android:id="@+id/todoWichtig"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Wichtig"
      android:checked="@={todo.wichtig}"
      app:layout_constraintTop_toBottomOf="@id/todoErledigt"
      app:layout_constraintLeft_toLeftOf="@id/todoErledigt">
    </CheckBox>

    <TextView
      android:id="@+id/output"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@={todo.faellig}"
      android:textSize="20sp"
      app:layout_constraintTop_toBottomOf="@id/todoWichtig"
      app:layout_constraintLeft_toLeftOf="parent"/>

    <com.google.android.material.button.MaterialButton
      android:id="@+id/todoFaelligButton"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:text="Datum setzen"
      android:layout_marginTop="16dp"
      android:onClick="@{(v) -> presenter.showDatePicker(todo)}"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/output" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/saveToDoButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:onClick="@{(v) -> presenter.onClickSaveToDoButton(todo)}"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:srcCompat="@drawable/baseline_save_white_24dp"
      android:layout_margin="16dp" />


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>